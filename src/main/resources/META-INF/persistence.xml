<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.lab.model.Worker</class>
        <class>org.lab.model.Coordinates</class>
        <class>org.lab.model.Organization</class>
        <class>org.lab.model.Person</class>
        <class>org.lab.model.Address</class>
        <class>org.lab.model.Location</class>
        <class>org.lab.model.Action</class>
        <class>org.lab.model.AdminRequest</class>
        <class>org.lab.model.User</class>

        <properties>
            <property name="jakarta.persistence.jtaDataSource" value="java:jboss/datasources/PostgresDS"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
